{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "standard",
        "eslint:recommended",
        "prettier",
        "prettier/prettier"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "prettier"
    ],
    "rules": {
        "prettier/prettier": "error",
        "indent": ["error", 2],
        "space-before-function-paren":"off",
        "semi": ["error", "always"],
        "quotes": ["error", "double"]
    }
}
